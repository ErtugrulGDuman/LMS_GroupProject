<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    @await Component.InvokeAsync("_DashboardHeadComponentPartial")
    <style>
        
        
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>

        <!-- Bootstrap CSS CDN -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

        <!-- Özel CSS Stiliniz -->
        <style>
        .bg-custom {
            background-color: #28a745; /* Yeşil arka plan */
            color: white; /* Beyaz metin rengi */
            border: 2px solid black; /* Çerçeve rengi ve kalınlığı */
            border-radius: 0.25rem; /* Köşe yuvarlama */
        }
        .btn-outline-danger, .btn-outline-success {
            border-width: 2px;
        }

        .content-wrapper {
            margin-top: 20px; /* İçeriğin aşağıya kaydırılması için */
            padding-left: 20px; /* İçeriğin sağa kaydırılması için */
        }

    </style>
</head>
<body class="layout-default">
<!-- Header Layout -->
<div class="mdk-header-layout js-mdk-header-layout">

    <!-- Header -->
    @await Component.InvokeAsync("_DashboardHeaderBarComponentPartial")
    <!-- // END Header -->

    <!-- Header Layout Content -->
    <div class="mdk-header-layout__content">

        <div class="mdk-drawer-layout js-mdk-drawer-layout" data-push data-responsive-width="992px">

            <!-- drawer-layout__content -->
            <div class="mdk-drawer-layout__content page content-wrapper">

                @RenderBody()
            </div>
            <!-- // END drawer-layout__content -->

            @await Component.InvokeAsync("_DashboardSideBarComponentPartial")

        </div>
    </div>
    <!-- // END header-layout__content -->
</div>
<!-- // END header-layout -->

<!-- jQuery -->
<script src="/admin-lema/HTML/dist/assets/vendor/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="/admin-lema/HTML/dist/assets/vendor/popper.min.js"></script>
<script src="/admin-lema/HTML/dist/assets/vendor/bootstrap.min.js"></script>
<!-- Perfect Scrollbar -->
<script src="/admin-lema/HTML/dist/assets/vendor/perfect-scrollbar.min.js"></script>
<!-- DOM Factory -->
<script src="/admin-lema/HTML/dist/assets/vendor/dom-factory.js"></script>
<!-- MDK -->
<script src="/admin-lema/HTML/dist/assets/vendor/material-design-kit.js"></script>
<!-- Range Slider -->
<script src="/admin-lema/HTML/dist/assets/vendor/ion.rangeSlider.min.js"></script>
<script src="/admin-lema/HTML/dist/assets/js/ion-rangeslider.js"></script>
<!-- App -->
<script src="/admin-lema/HTML/dist/assets/js/toggle-check-all.js"></script>
<script src="/admin-lema/HTML/dist/assets/js/check-selected-row.js"></script>
<script src="/admin-lema/HTML/dist/assets/js/dropdown.js"></script>
<script src="/admin-lema/HTML/dist/assets/js/sidebar-mini.js"></script>
<script src="/admin-lema/HTML/dist/assets/js/app.js"></script>
<!-- App Settings (safe to remove) -->
<script src="/admin-lema/HTML/dist/assets/js/app-settings.js"></script>
<!-- jQuery, Popper.js, Bootstrap JS CDN -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>